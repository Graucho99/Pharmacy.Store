@model AdminViewModel

<form asp-action="Add" method="post" role="form">
    <h3 class="my-5">
        Карточка товара
    </h3>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label asp-for="@Model.Medicament.Name" class="form-label"></label>
                <input asp-for="@Model.Medicament.Name" class="form-control" />
                <span asp-validation-for="@Model.Medicament.Name" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="@Model.Medicament.ShortDescription" class="form-label"></label>
                <input asp-for="@Model.Medicament.ShortDescription" class="form-control" />
                <span asp-validation-for="@Model.Medicament.ShortDescription" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="@Model.Medicament.LongDescription" class="form-label"></label>
                <input asp-for="@Model.Medicament.LongDescription" class="form-control" />
                <span asp-validation-for="@Model.Medicament.LongDescription" class="text-danger"></span>
            </div>

            <div class="col-3">
                <label asp-for="@Model.Medicament.Price" class="form-label"></label>
                <input asp-for="@Model.Medicament.Price" class="form-control" />
                <span asp-validation-for="@Model.Medicament.Price" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="@Model.Medicament.ImageUrl" class="form-label"></label>
                <input asp-for="@Model.Medicament.ImageUrl" class="form-control" />
                <span asp-validation-for="@Model.Medicament.ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="@Model.Medicament.ImageThumbnailUrl" class="form-label"></label>
                <input asp-for="@Model.Medicament.ImageThumbnailUrl" class="form-control" />
                <span asp-validation-for="@Model.Medicament.ImageThumbnailUrl" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="@Model.Medicament.AllergyInformation" class="form-label"></label>
                <input asp-for="@Model.Medicament.AllergyInformation" class="form-control" />
                <span asp-validation-for="@Model.Medicament.AllergyInformation" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="@Model.Medicament.Category.CategoryName" class="form-label">Категория</label>
                <select asp-for="@Model.Medicament.Category.CategoryName" class="form-control">
                    @foreach (var category in Model.categories)
                    {
                        <option>
                            <a>@category.CategoryName</a>
                        </option>
                    }
                </select>
            </div>

            <div class="col-3">
                <label asp-for="@Model.Medicament.InStock" class="form-label"></label>
                <select asp-for="@Model.Medicament.InStock" class="form-control">

                    <option>
                        <a>True</a>
                    </option>
                    <option>
                        <a>False</a>
                    </option>
                </select>
            </div>

            <div class="col-3">
                <label asp-for="@Model.Medicament.IsDiscountOfTheWeek " class="form-label"></label>
                <select asp-for="@Model.Medicament.IsDiscountOfTheWeek" class="form-control">
                    <option>
                        <a>True</a>
                    </option>
                    <option>
                        <a>False</a>
                    </option>
                </select>
            </div>
                <input asp-for="@Model.Medicament.MedicamentId" class="form-control" />
        </div>
    </div>
    <div class="mt-2">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-secondary" value="Сохранить изменения" />
        </div>
    </div>
</form>
