@model ShoppingCartViewModel

<h3 class="my-5">
    Корзина
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@line.Medicament.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@line.Medicament.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Medicament.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Medicament.ShortDescription</h6>
                                <h2>@line.Medicament.Price.ToString("c")</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Всего:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a class="btn btn-secondary" asp-controller="Order" asp-action="Checkout"><h4>Оформить заказ</h4></a>

            </div>
        </div>
    </div>
</div>
