<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Medicament?.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Medicament?.Price.ToString("c")</h3>
            <h3>
                <a href="/medicament/details/@Medicament?.MedicamentId">@Medicament?.Name</a>
            </h3>
            <p>@Medicament?.ShortDescription</p>
        </div>
    </div>
</div>